<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.chemicalplantmanagementsystem.ProductionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Pro_Code"
            android:textSize="@dimen/gate_pass_list_item_heading_text_size" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/gate_pass_list_item_heading_text_size" />

        <TextView
            android:layout_width="@dimen/gate_pass_destination_width"

            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="@dimen/gate_pass_list_item_heading_text_size" />

    </LinearLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_production"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
